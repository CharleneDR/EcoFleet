<div class="card rounded-0 mb-5 pb-5 border-bottom border-grey" style="width: 750px;">
	<div class="row g-0 h-100">
		<div class="h-100 col-md-4 img-car rounded-4" style="background-image: url({{rent.car.picture}})"></div>
		<div class="col-md-8">
			<div class="card-body h-100 pb-0 d-flex flex-column justify-content-between">
				<div class="d-flex flex-row justify-content-between">
					<h5 class="card-title mb-0">{{rent.car.model}}
						-
						{{rent.car.brand}}</h5>
					<div class="d-flex flex-row justify-content-end text-success">
						<div class="carbon"></div>
						<div class="ps-1">kg CO<sup>2</sup>
						</div>
						<div class="px-1">saved</div>

						<img src="{{ asset('build/images/leaf.png') }}" class="leafLogo">
					</div>
				</div>

				<p class="card-text mb-2">
					<small>{{rent.car.registration}}</small>
				</p>
				<p class="card-text mb-0">{{rent.car.seats - rent.passenger|length}}
					{% if(rent.car.seats - rent.passenger|length == 1) %}
						seat available
					{% else %}
						seats available
					{% endif %}
				</p>
				<div class="d-flex flex-row justify-content-between align-items-end">
					<div class="d-flex flex-column align-items-start mt-2">
						<small>Passengers:
						</small>
						{% for passenger in rent.passenger %}
							<small>{{passenger.employee.firstname}}
								{{passenger.employee.lastname}}
								<br></small>
						{% endfor %}
					</div>

				</div>
				<div class="d-flex justify-content-end">
					<a href="{{ path("app_rent_carSharing", {'id':rent.id})}}" class="btn button rounded">Share</a>
				</div>
			</div>
		</div>
	</div>
	<div>
		<span class="d-none energies">{{rent.car.fuel}}<span></div>
		</div>
