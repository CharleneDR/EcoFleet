<div class="card mb-3" style="width: 750px;">
	<div class="row g-0">
		<div class="col-md-4 img-car rounded-start" style="background-image: url({{rent.car.picture}})"></div>
		<div class="col-md-8">
			<div class="card-body py-2">
				<div class="d-flex flex-row justify-content-between">
					<h5 class="card-title mb-0">{{rent.car.model}}
						-
						{{rent.car.brand}}</h5>
					<div class="d-flex flex-row justify-content-end">
						<div class="pe-1">-</div>
						<div class="carbon"></div>
						<div class="ps-1">kgCO2</div>
					</div>
				</div>

				<p class="card-text mb-2">
					<small>{{rent.car.registration}}</small>
				</p>
				<p class="card-text mb-0">{{rent.car.seats - rent.passenger|length}}
					seats available
				</p>
				<div class="d-flex justify-content-end">
					<a href="{{ path("app_rent_new", {'id':rent.car.id, 'locationDeparture':locationDeparture, 'locationArrival':locationArrival, 'startDate':startDate, 'endDate':endDate}) }}" class="btn button rounded">Book</a>
				</div>
			</div>
		</div>
	</div>
	<div>
		<span class="d-none energies">{{rent.car.fuel}}<span></div>
		</div>
