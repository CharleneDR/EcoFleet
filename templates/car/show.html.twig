{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ car.brand }}</td>
            </tr>
            <tr>
                <th>Fuel</th>
                <td>{{ car.fuel }}</td>
            </tr>
            <tr>
                <th>Geerbox</th>
                <td>{{ car.geerbox }}</td>
            </tr>
            <tr>
                <th>Kilometers</th>
                <td>{{ car.kilometers }}</td>
            </tr>
            <tr>
                <th>Seats</th>
                <td>{{ car.seats }}</td>
            </tr>
            <tr>
                <th>Unavailabilitydate</th>
                <td>{{ car.unavailabilitydate ? car.unavailabilitydate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Registration</th>
                <td>{{ car.registration }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_car_index') }}">back to list</a>

    <a href="{{ path('app_car_edit', {'id': car.id}) }}">edit</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
