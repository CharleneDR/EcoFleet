{% extends 'baseLogin.html.twig' %}

{% block body %}

	<main class="container">
		<div class="row d-flex mb-3 justify-content-md-center mt-5 text-center">

			<img class="mb-3" src="{{asset('build/images/sharing_car.svg')}}" alt="" width="90" height="90">
			<h1 class="h3 mb-3 fw-normal">Welcome to the fleet management service of Spectra Society !<br>
			</h1>

			<h2 id="slogan">Carsharing friendly<img id="plant" src="{{asset('build/images/plant.svg')}}" alt="plant"></h2>

			{% if error %}
				<div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<div class="login border border-1 px-4 m-4 mb-0 rounded-2">
				<form action="{{ path('app_login') }}" method="post">

					<div class="">
						<label class="form-label mt-3 text-white" for="username">Email :</label>
						<input type="text" class="form-control mt-1" id="username" name="_username" placeholder="Your email here" value="{{ last_username }}">
					</div>

					<div class="my-3">
						<label class="form-label mt-3 text-white" for="password">Password :</label>
						<input type="password" id="password" name="_password" class="form-control mt-1 mb-4" placeholder="Your password here">
					</div>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<input type="hidden" name="_target_path" value="/login/redirect">
			</div>
			<div class="row d-flex justify-content-center">
				<button class="btn btn-lg button" type="submit">Login</button>
			</div>
		</form>
		<div class="d-flex justify-content-center">
			<p class="mt-5 mb-3 text-muted">&copy; Hackathon Wild Code School 2023</p>
		</div>
	</div>
</div></main>{% endblock %}
